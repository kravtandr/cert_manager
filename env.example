# ===========================================
# НАСТРОЙКИ БАЗЫ ДАННЫХ
# ===========================================

# Путь к файлу базы данных SQLite
DB_PATH=data/certificates.db

# ===========================================
# ПАРАМЕТРЫ ГЕНЕРАЦИИ ДАННЫХ
# ===========================================

# Количество клиентов для генерации (1-10,000,000)
NUM_CLIENTS=1000

# Количество сертификатов для генерации (1-20,000,000)
NUM_CERTIFICATES=2000

# ===========================================
# ОПТИМИЗАЦИЯ ПРОИЗВОДИТЕЛЬНОСТИ
# ===========================================

# Размер батча для обработки (оставить пустым для автоматической оптимизации)
BATCH_SIZE=

# Количество рабочих потоков (оставить пустым для автоматической оптимизации)
NUM_WORKERS=

# Размер буфера записи (оставить пустым для автоматической оптимизации)
BUFFER_SIZE=

# ===========================================
# НАСТРОЙКИ API
# ===========================================

# Хост для API сервера
API_HOST=0.0.0.0

# Порт для API сервера
API_PORT=8000

# Режим отладки (true/false)
DEBUG=false

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===========================================
# ПУТИ К ФАЙЛАМ
# ===========================================

# Директория для выходных файлов
OUTPUT_DIR=output

# Директория для логов
LOG_DIR=logs

# ===========================================
# НАСТРОЙКИ DOCKER
# ===========================================

# Имя контейнера
CONTAINER_NAME=certificate-manager

# Имя образа
IMAGE_NAME=certificate-manager:latest

# ===========================================
# БЕЗОПАСНОСТЬ
# ===========================================

# Секретный ключ для API (генерируется автоматически если не указан)
SECRET_KEY=

# Разрешенные origins для CORS (разделенные запятыми)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ===========================================
# МОНИТОРИНГ
# ===========================================

# Интервал мониторинга памяти в секундах
MEMORY_MONITOR_INTERVAL=60

# Максимальное использование памяти в GB (предупреждение)
MAX_MEMORY_WARNING_GB=8.0 